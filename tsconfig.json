{
  "compilerOptions": {
    "target": "ES2021", // или более новая версия, например, "ES2020"
    "module": "commonjs", // или "ESNext"
    "moduleResolution": "node",
    "outDir": "./build", // выходная директория для скомпилированных файлов
    "rootDir": "./src", // корневая директория исходных файлов
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"], // путь к вашим исходным файлам
  "exclude": ["node_modules", "**/*.spec.ts"] // исключаемые файлы
}
